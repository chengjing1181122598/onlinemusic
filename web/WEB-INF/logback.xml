<?xml version="1.0" encoding="UTF-8"?>
<configuration>  
  
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">  
        <encoder>  
            <pattern>%d{H:mm} %-5level [%logger{16}] %msg%n</pattern>
        </encoder>  
    </appender>  
  
    <root level="DEBUG">  
        <appender-ref ref="STDOUT" />  
    </root>  
</configuration>  